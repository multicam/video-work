{
  "mount": {
    "public": "/",
    "src": "/_dist_"
  },
  "plugins": [
    [
      "@snowpack/plugin-run-script", {
        "cmd": "sass style:public/style --no-source-map",
        "watch": "$1 --watch"
      }
    ],
    ["@snowpack/plugin-build-script", {"cmd": "postcss", "input": ["public/style/*.css"], "output": ["public/style/*.css"]}]
  ]
}
